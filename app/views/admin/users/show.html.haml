- provide(:title, full_name(@user))
%h1 #{User.model_name.human}: #{@user.id}
.form
  .form-group
    .control-label
      = User.human_attribute_name 'first_name'
    .form-control{disabled: :disabled}
      = @user.first_name
  .form-group
    .control-label
      = User.human_attribute_name 'last_name'
    .form-control{disabled: :disabled}
      = @user.last_name
  .form-group
    .control-label
      = User.human_attribute_name 'email'
    .form-control{disabled: :disabled}
      = @user.email
  .form-group
    .control-label
      = User.human_attribute_name 'phone'
    .form-control{disabled: :disabled}
      = @user.phone
  .form-group
    .control-label
      = User.human_attribute_name 'created_at'
    .form-control{disabled: :disabled}
      = l @user.created_at
  .form-group
    .control-label
      = User.human_attribute_name 'udpated_at'
    .form-control{disabled: :disabled}
      = l @user.updated_at
%p
  = link_to t(".edit_user"), edit_admin_user_path(@user), class: "btn btn-primary"

.container-fluid
  %table.datatable.table.table-striped.table-bordered
    %thead
      %tr
        %th= Offspring.human_attribute_name('id')
        %th= Offspring.human_attribute_name('first_name')
        %th= Offspring.human_attribute_name('last_name')
        %th= Offspring.human_attribute_name('grade')
        %th= Offspring.human_attribute_name('shift')
        %th= Offspring.human_attribute_name('user')
        %th= Offspring.human_attribute_name('created_at')
        %th= Offspring.human_attribute_name('updated_at')
    %tbody
      = render @user.offsprings

  - content_for :javascripts do
    :javascript
      // Initialize Datatables
      $(document).ready(function() {
        $('.datatable').dataTable();
      });
